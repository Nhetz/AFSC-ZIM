#:import Factory kivy.factory.Factory
#:import MDRoundFlatButton kivymd.uix.button.MDRoundFlatButton
#:import MDRoundFlatIconButton kivymd.uix.button.MDRoundFlatIconButton
#:import MDRectangleFlatIconButton kivymd.uix.button.MDRectangleFlatIconButton
#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
#: import icon kivy.garden.iconfonts.icon

Window:
  Main:
  Admin:
  Users:
  AddTask:
  AddStaff:
  SignUp:
  RV:
  DeleteStaff:







<SpinnerOptions7@SpinnerOption>
  background_color:1,0,0,1
  color:1,1,1,1
  font_size:26

<SpinnerOptions1@SpinnerOption>
  font_size:26
  background_color:0,0,0,1
  color:1,1,1,1


<SpinnerOptions2@SpinnerOption>
  background_color:1,1,1,1
  font_size:26
  color:0,0,0,1
  background_normal:""

<SpinnerOptions3@SpinnerOption>
  background_color:1,0,1,1
  font_size:26
  color:1,1,1,1







<Main>:
  name:"main"
  canvas.before:
    Color:
      rgba:1,1,1,1
    Rectangle:
      pos:self.pos
      size:self.size
  GridLayout:
    cols:2
    FloatLayout:
      Image:
        size_hint:0.5,0.3
        pos_hint:{"x":0.26,"y":0.7}
        source:"afsc.png"





      Label:
        text: "UserName"
        size_hint:0.2,0.1
        pos_hint:{"x":0.2,"y":0.54}
        font_size:26
        color:0,0,0,1

      TextInput:
        id:u
        on_text:
          root.manager.user.usertext = self.text
        size_hint:0.2,0.1
        pos_hint:{"x":0.6,"y":0.54}
        font_size:26
        background_color:1,1,1,1



      Label:
        text:"Password"
        size_hint:0.2,0.1
        pos_hint:{"x":0.2, "y":0.34}
        font_size:26
        color:0,0,0,1

      TextInput:
        id:p
        on_text:
          root.manager.user.passtext = self.text
        size_hint:0.2,0.1
        pos_hint:{"x":0.6,"y":0.34}
        font_size:26
        password:True



      MDRoundFlatIconButton:
        text:"LOGIN"
        icon:"login-variant"
        size_hint:0.2,0.1
        pos_hint:{"x": 0.1, "y":0.1}
        font_size:26
        on_release:
          root.manager.transition.direction ="up"
          root.Login()
        md_bg_color:0,1,1,1
        text_color:0,0,0,1
        theme_text_color:"Custom"
        markup:True


      MDRoundFlatIconButton:
        text:"SIGN UP"
        icon:"plus-circle-multiple-outline"
        pos_hint:{"x":0.4, "y":0.1}
        size_hint:0.2,0.1
        font_size:26
        on_release:
          app.root.transition.direction ="left"
          app.root.current ="signup"
        md_bg_color:0,0,0,1
        text_color:1,1,1,1
        markup:True


      MDRoundFlatIconButton:
        text:"CLEAR"
        pos_hint:{"x":0.7,"y":0.1}
        size_hint:0.2,0.1
        font_size:26
        on_release:
          u.text =""
          p.text =""
        icon:"delete"
        md_bg_color:1,0,0,1
        text_color:1,1,1,1
        markup:True
        background_color:1,0,0,1


<Users>
  name:"users"
  canvas.before:
    Color:
      rgba:1,1,1,1
    Rectangle:
      pos:self.pos
      size:self.size
  GridLayout:
    cols:2
    FloatLayout:
      Image:
        size_hint:0.5,0.3
        pos_hint:{"x":0.2,"y":0.7}
        source:"afsc.png"


      MDRoundFlatIconButton:
        icon:"bell-ring"
        size_hint:0.4,0.1
        pos_hint:{"x":0.7,"y":0.8}
        color:1,0,0,1
        text:"Notifications"
        md_bg_color:1,1,1,1
        text_color:1,0,0,1
        font_size:26

      Label:
        text:"Welcome"
        size_hint:0.4,0.1
        pos_hint:{"x":0.0,"y":0.8}
        font_size:26
        color:0.41, 0.42, 0.74, 1


      Label:
        text: root.manager.user.usertext
        size_hint:0.4,0.1
        pos_hint:{"x":0.0, "y":0.7}
        font_size:26
        color:0.41,0.42 ,0.74,1

      TabbedPanel:
        do_default_tab: False
        tab_width: root.width / 3
        background_color:102,255,255,1
        border:[0,0,0,0]
        pos_hint:{"x":0.2,"y":0.3}
        size_hint:0.6,0.3

        TabbedPanelItem:
          text:"Departmental"
          background_color:0,0,0,1
          color:1,1,1,1
          font_size:26
          size_hint:0.5,0.3
          GridLayout:
            cols:1
            BoxLayout:
              spacing:2
              orientation:"vertical"
              MDRectangleFlatIconButton:
                text:"Supervision"
                icon:"human"
                size_hint:0.5,0.1
                on_release:
                pos_hint:{"x":0.1,"y":0.9}
                md_bg_color:0,0,0,1
                text_color:1,1,1,1
                font_size:26
                on_release:
                  root.supervise()

              MDRectangleFlatIconButton:
                text:"Past Records"
                icon:"file"
                size_hint:0.5,0.1
                on_release:
                pos_hint:{"x":0.1,"y":0.8}
                md_bg_color:0,0,0,1
                text_color:1,1,1,1
                font_size:26

        TabbedPanelItem:
          text:"Individual"
          background_color:0,0,0,1
          color:1,1,1,1
          font_size:26
          size_hint:0.5,0.3
          GridLayout:
            cols:1
            BoxLayout:
              spacing:2
              orientation: "vertical"
              MDRectangleFlatIconButton:
                text:"View Tasks"
                icon:"eye"
                pos_hint:{"x":0.6,"y":0.9}
                size_hint:0.5,0.1
                md_bg_color:0,0,0,1
                text_color:1,1,1,1
                font_size:26
                on_release:
                  app.root.current ="view"
                  app.root.transition.direction = "up"

              MDRectangleFlatIconButton:
                text:"Add Tasks"
                icon:"plus-circle"
                pos_hint:{"x":0.6,"y":0.8}
                size_hint:0.5,0.1
                md_bg_color:0,0,0,1
                text_color:1,1,1,1
                font_size:26
                on_release:
                  app.root.current = "addt"
                  app.root.transition.direction = "right"

      MDRoundFlatIconButton:
        text:"BACK"
        icon:"arrow-left"
        pos_hint:{"x":0.2,"y":0.1}
        size_hint:0.2,0.1
        md_bg_color:0,0,0,1
        text_color:1,1,1,1
        font_size:26
        on_release:
          app.root.current ="main"
          app.root.transition.direction = "left"

<Admin>
