      MDRoundFlatIconButton:
        text:"CLEAR"
        pos_hint:{"x":0.7,"y":0.2}
        size_hint:0.2,0.1
        font_size:26
        on_release:
          root.clear()
        md_bg_color:1,0,0,1
        icon:"delete"
        text_color:1,1,1,1



<AddTask>
  name:"addt"
  canvas.before:
    Color:
      rgba:1,1,1,1
    Rectangle:
      size:self.size
      pos:self.pos
  GridLayout:
    cols:2
    FloatLayout:
      Image:
        size_hint:0.5,0.2
        pos_hint:{"x":0.3,"y":0.8}
        source:"afsc.png"

      Label:
        text:"TaskName"
        size_hint:0.4,0.1
        pos_hint:{"x":0.0,"y":0.7}
        font_size:26
        color:0,0,0,1

      TextInput:
        id:taskNm
        on_text:
          root.manager.user.taskName = self.text
        size_hint:0.4,0.1
        pos_hint:{"x":0.4,"y":0.7}
        font_size:26


      Label:
        text:"Description"
        size_hint:0.4,0.1
        pos_hint:{"x":0.0,"y":0.4}
        font_size:26
        color:0,0,0,1


      TextInput:
        id:taskdsr
        on_text:
          root.manager.user.taskdsc =self.text
        size_hint:0.4,0.2
        pos_hint:{"x":0.4,"y":0.4}
        font_size:26
        multipleline:True

      MDRoundFlatIconButton:
        text:'Calendar'
        icon:"calendar"
        pos_hint:{"x":0.1,"y":0.2}
        font_size:26
        theme_text_color:"Custom"
        text_color:1,1,1,1
        size_hint:0.2,0.1
        md_bg_color:0,0,0,1
        icon_bg_color:1,1,1,1

        on_release:
          root.show_date()

      TextInput:
        id:cale
        font_size:26
        pos_hint:{"x":0.4,"y":0.2}
        size_hint:0.2,0.1

      MDRoundFlatIconButton:
        text:"Clear"
        icon:'delete-sweep'
        size_hint:0.2,0.1
        pos_hint:{"x":0.7,"y":0.2}
        font_size:26
        md_bg_color:0,1,0,1
        text_color:0,0,0,1
        theme_text_color:"Custom"
        on_release:
          root.clear()
        border_color:1,0,0,1


      MDRoundFlatIconButton:
        text:"SAVE"
        icon:'marker-check'
        size_hint:0.2,0.1
        pos_hint:{"x":0.1,"y":0.0}
        font_size:26
        md_bg_color:0,1,1,1
        text_color:0,0,0,1
        theme_text_color:"Custom"
        on_release:
          root.submit()
        border_color:1,0,0,1

      MDRoundFlatIconButton:
        text:"BACK"
        icon:"arrow-left"
        size_hint:0.2,0.1 
        pos_hint:{"x":0.5,"y":0.0}
        font_size:26
        md_bg_color:0,0,0,1
        text_color:1,1,1,1
        theme_text_color:"Custom"
        on_release:
          root.position()
          app.root.current ="admin" if root.manager.user.position =="Admin" else "users"
          app.root.transition.direction ="left"



<AddStaff>
  nm:nm
  name:"adds"
  canvas.before:
    Color:
      rgba:1,1,1,1
    Rectangle:
      size:self.size
      pos:self.pos
  GridLayout:
    cols:2
    FloatLayout:
      Image:
        size_hint:0.5,0.2
        pos_hint:{"x":0.1,"y":0.8}
        source:"afsc.png"

      Label:
        text:"Name"
        font_size:26
        pos_hint:{"x":0.1,"y":0.6}
        font_size:26
        size_hint:0.2,0.1
        color:0,0,0,1



      TextInput:
        id:nm
        hint_text:"INITIALS"
        pos_hint:{"x":0.4,"y":0.6}
        size_hint:0.2,0.1
        color:0,0,0,1
        font_size:26



      Spinner:
        id:department
        text:"Department"
        values:['FA','CR','PO','MEAL']
        pos_hint:{"x":0.7,"y":0.6}
        size_hint:0.2,0.1
        font_size:26
        background_color:1,0,1,1
        color:1,1,1,1
        option_cls:Factory.get("SpinnerOptions3")
        on_text:
          root.dept()


      Spinner:
        id:role
        text:"Role"
        values:{'Admin','Employee'}
        pos_hint:{"x":0.7,"y":0.1}
        size_hint:0.2,0.1
        font_size:26
        background_color:0,0,0,1
        color:1,1,1,1
        option_cls:Factory.get("SpinnerOptions1")


      Label:
        text:"Supervision"
        size_hint:0.2,0.1
        pos_hint:{"x":0.1,"y":0.4}
        font_size:26
        color:0,0,0,1

      Label:
        text:"Yes"
        color:0,0,1,1
        font_size:26
        size_hint:0.2,0.1
        pos_hint:{"x":0.3,"y":0.4}

      Label:
        text:"No"
        color:1,0,0,1
        font_size:26
        size_hint:0.2,0.1
        pos_hint:{"x":0.3,"y":0.3}

      CheckBox:
        group:"check"
        text:"Yes"
        on_active:
          root.supervisor = self.text
        pos_hint:{"x":0.4,"y":0.4}
        size_hint:0.2,0.1
        color:0,0,1,1

      CheckBox:
        group:"check"
        text:"No"
        on_active:
          root.supervisor = self.text
        pos_hint:{"x":0.4,"y":0.3}
        size_hint:0.2,0.1
        color:1,0,0,1

      Spinner:
        id:sup
        text:"Supervisor"
        pos_hint:{"x":0.7,"y":0.4}
        size_hint:0.2,0.1
        font_size:26
        background_color:0,1,1,1



      MDRoundFlatIconButton:
        icon:"folder"
        md_bg_color:0,1,1,1
        text_color:0,0,0,1
        text:"SAVE"
        size_hint:0.2,0.1
        font_size:26
        size:100,59
        pos_hint:{"x":0.1,"y":0.1}
        on_release:
          root.add()


      MDRoundFlatIconButton:
        icon:"arrow-left"
        size:100,59
        md_bg_color:1,0,0,1
        text_color:1,1,1,1
        size_hint:0.2,0.1
        font_size:26
        text:"BACK"
        on_release:
          root.back()
        pos_hint:{"x":0.4,"y":0.1}



<RV>:
  name:"view"
  canvas.before:
    Color:
      rgba:1,1,1,1
    Rectangle:
      size:self.size
      pos:self.pos
  GridLayout:
    cols:1
    FloatLayout:
      Image:
        size_hint:0.5,0.2
        pos_hint:{"x":0.25,"y":0.8}
        source:"afsc.png"
      RecycleView:
        viewclass: 'TaskLayout'
        size_hint:0.4,0.5
        pos_hint:{"x":0.5,"y":0.2}
        data:[{'text': str(x)} for x in root.manager.user.staff]
        RecycleBoxLayout:
          default_size: None, dp(50)
          default_size_hint: 1, None
          orientation: 'vertical'
          multiselect:False
          touch_multiselect: False
          size_hint_y: None
          height: self.minimum_height
      MDRectangleFlatIconButton:
        text:"BACK"
        icon:"arrow-left"
        pos_hint:{"x":0.1,"y":0.1}
        font_size:26
        size_hint:0.2,0.1
        md_bg_color:0,1,1,1
        text_color:0,0,0,1
        on_release:
          root.clear()
          root.position()
          app.root.current ="admin" if root.manager.user.position =="Admin" else "users"
      Label:
        text:"Week's Progress:"
        pos_hint:{"x":0.1,"y":0.4}
        font_size:26
        size_hint:0.2,0.1
        color:0,0,0,1
      Label:
        text:root.percentage +"%"
        pos_hint:{"x":0.1,"y":0.3}
        font_size:26
        size_hint:0.2,0.1
        color:1,0,1,1
        
      Label:
        text:"Tasks Pending:"
        pos_hint:{"x":0.1,"y":0.6}
        font_size:26
        size_hint:0.2,0.1
        color:1,0,0,1

      Label:
        text:root.manager.user.pending
        pos_hint:{"x":0.1,"y":0.5}
        font_size:26
        size_hint:0.2,0.1
        color:0,0,0,1




<DeleteStaff>
  name:"delete"
  spi:spi
  canvas.before:
    Color:
      rgba:1,1,1,1
    Rectangle:
      size:self.size
      pos:self.pos

  GridLayout:
    cols:2
    FloatLayout:
      Image:
        size_hint:0.4,0.2
        pos_hint:{"x":0.3,"y":0.8}
        source:"afsc.png"

      Label:
        text:"SELECT NAME"
        size_hint:0.4,0.1
        pos_hint:{"x":0.1,"y":0.6}
        color:1,0,0,1
        font_size:26



      Spinner:
        id:spi
        text:"Choose Name"
        values:root.u
        size_hint:0.3,0.1
        pos_hint:{"x":0.5,"y":0.6}
